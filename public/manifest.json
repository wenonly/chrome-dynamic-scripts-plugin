{
    "manifest_version": 3,
    "name": "Chrome Scripts Plugin",
    "version": "0.0.1",
    "description": "A Chrome extension built with React, TypeScript, and Vite",
    "permissions": [],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "options_page": "src/options/index.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}